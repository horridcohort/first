<header class="navbar navbar-fixed-top navbar-inverse">
  <% if logged_in? %>
  <div class="container">
    <%= link_to "Dareum " ,  home_user_path(current_user), id: "logo" %>
    <nav>
      <ul class="nav navbar-nav pull-right">
        <%= form_tag(users_path, :method => "get", class: "form-search navbar-search pull-right", id: "search-form") do %>
      <div class="input-append">    
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search For Your Friends" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn btn-inverse" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>
              <ul class="navbar-nav pull-right">
              <li><%= link_to "All Users    |", users_path %>           </li>
              <li><%= link_to "  Leaderboards", users_rank_path %></li>
       <li><%= link_to "      |Log out", logout_path, method: "delete" %>            </li><br/>
             </ul>
        <% else %>
         <ul class="nav navbar-nav pull-right">
          <li><%= link_to "Log in", login_path %></li>
        <% end %></ul>
      </ul>
    </nav>
  </div>
</header>